<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tasktrek.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TaskTrek</name>
    <description>Трекер задач - управляйте вашими задачами эффективно</description>
    <author email="developer@tasktrek.com" href="https://tasktrek.com">
        TaskTrek Team
    </author>
    <content src="index.html" />

    <!-- Allow access to all external resources -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*" />

    <!-- Platform specific settings -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
    </platform>

    <!-- Preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="default" />
    <preference name="Fullscreen" value="false" />

    <!-- Allow loading resources from CDN -->
    <allow-navigation href="https://cdnjs.cloudflare.com/*" />
    <allow-navigation href="https://cdn.tailwindcss.com/*" />
</widget>
